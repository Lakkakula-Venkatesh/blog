<div class="home">
  <div class="home-header">
    <h1>Articles</h1>
    <%= link_to 'New Article', new_article_path, :class => "new-article-link" %>
  </div>

  <%= @articles.each do |article| %>
    <%= link_to article, class: "article-link" do %>
      <div class="article-card">
        <h2><%= article.title %></h2>
        <p><%= article.content %></p>
        <%= link_to 'Edit', edit_article_path(article) %> <span>|</span>
        <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  <% end %>
</div>